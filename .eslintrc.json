{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
      "no-underscore-dangle": ["error", { "allow": ["foo_", "_bar", "_id"] }],
      "react/jsx-filename-extension": [
        0,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/react-in-jsx-scope": "off",
      "object-curly-newline": [
        "error",
        {
          "ObjectExpression": {
            "consistent": true,
            "multiline": true
          },
          "ObjectPattern": {
            "consistent": true,
            "multiline": true
          },
          "ImportDeclaration": {
            "consistent": true,
            "multiline": true
          },
          "ExportDeclaration": {
            "multiline": true,
            "minProperties": 3
          }
        }
      ]
    }
}
